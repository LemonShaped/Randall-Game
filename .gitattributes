# lf endings
eol=lf
* eol=lf

# only convert eol on files in Assets
* -text
/Assets/* text=auto eol=lf
/Assets/**/* text=auto eol=lf

.editorconfig text=auto eol=lf
.gitignore text=auto eol=lf
.gitattributes text=auto eol=lf
GlobalSuppresssions.cs text=auto eol=crlf

# Dont touch line endings
/Assets/TextMesh[:space:]]Pro/**/* -text

# Collapse Unity-generated files on GitHub
*.asset linguist-generated -text
*.mat linguist-generated -text
*.meta linguist-generated -text
*.prefab linguist-generated -text
*.unity linguist-generated -text

